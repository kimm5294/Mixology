<div class="container">
<div class="row">
  <div class="col-md-4 pop">
    <h3>Popular Drinks</h3>
    <ul>
      <% @popular_drinks.each do |drink| %>
        <li>
          <%=link_to "#{drink[:name]}", {controller: "drinks", action: "display", api: "#{drink[:api_code]}"} %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-4 search">
    <h3>Search Drinks</h3>
    <%= form_tag({controller: "drinks", action: "search"}, method: "get") do %>
      <%= text_field_tag(:search, nil, placeholder:"Search") %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>
</div>
</div>